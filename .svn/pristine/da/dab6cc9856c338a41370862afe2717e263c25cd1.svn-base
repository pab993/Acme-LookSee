
package repositories;

import java.util.Collection;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import domain.Offer;

@Repository
public interface OfferRepository extends JpaRepository<Offer, Integer> {

	@Query("select o from Offer o where o.company.id = ?1")
	Collection<Offer> findAllByCompanyId(int companyId);

	@Query("select o from Offer o where o.title like %?1% or o.description like %?1% or o.salary.minSalary like %?1% or o.salary.maxSalary like %?1% or o.salary.currency like %?1%")
	Collection<Offer> searchOfferByWords(String keyWord);
}
